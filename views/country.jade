extend layout

block content
  h2 #{country.destination_name}
  p
    | #{country.country_name} likely offers #{country.min_days}-#{country.max_days} of activities.
  h3 Destinations
  ul
    each destination in country.destinations.length ? country.destinations : [null]
      if destination
        li= #[a(href='/destinations/'+destination.destination_id) #{destination.destination_name}] for #{destination.min_days}-#{destination.max_days}

